{
    "compilerOptions": {
        // Enable automatic JSX transform (React 17 +)
        "jsx": "react-jsx",
        "types": ["vite/client"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@assets/*": ["assets/*"],
            "@utils/*": ["utils/*"],
            "@constants/*": ["constants/*"],
            "@hooks/*": ["hooks/*"],
            "@services/*": ["services/*"],
            "@store/*": ["store/*"],
            "@types/*": ["types/*"],
            "@lib/*": ["lib/*"]
        }
    },
    "files": [],
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ]
}
